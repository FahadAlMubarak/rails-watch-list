
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), asset-url(theater.jpeg);">
  <div class="container">
    <h1>Your Movie Lists</h1>
  </div>
</div>

<div class="container">
  <div class="row">
    <% @lists.each do |list| %>
      <div class="col-md-4">
        <div class="card">
            <%= image_tag "card.jpg", class: "card-img-top", alt: list.name %>
          <div class="card-body">
            <h2 class="card-title "><%= link_to list.name, list_path(list), class: 'text-decoration-none' %></h2>
          </div>
        </div>
      </div>
       <% end %>
    </div>
  </div>
 </div>

<div class="container my-4">
  <div class="d-flex justify-content-end">
    <%= link_to 'Create a New List', new_list_path, class: 'btn btn-primary btn-lg shadow-lg custom-button' %>
  </div>
</div>
