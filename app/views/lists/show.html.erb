<div class="d-flex justify-content-center">
    <h2> <%= @list.name %> </h2>
</div>
<div class="d-flex justify-content-end">
  <%= link_to "Create a bookmark", new_list_bookmark_path(@list), class: 'btn btn-info'  %>

</div>
<div class="container">
  <div class="row justify-content-center">
      <% @list.bookmarks.each do |bookmark| %>
    <div class="col-md-6">
      <div class="card">
          <%= image_tag bookmark.movie.poster_url, alt: bookmark.movie.title,  class: 'card-img-top img-fluid'%>
        <h2 class="card-title-movie">
          <%= bookmark.movie.title %>
        </h2>
        <h4>
          <%= bookmark.movie.overview %>
        </h4>
        <h5 class= "card-rating fa-solid fa-star">
          <%= bookmark.movie.rating%> rating
        </h5>
      <div class="d-flex justify-content-between align-items-center">
        <%= bookmark.comment %>
        <%= link_to "Delete",
              bookmark_path(bookmark), class: 'btn btn-danger',
              data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
      </div>

      </div>
    </div>
      <% end %>
  </div>
  <%= link_to "Create a bookmark", new_list_bookmark_path(@list), class: 'btn btn-info'  %>
</div>
